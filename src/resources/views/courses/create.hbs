<div class="mt-4">
    <h3 class="mt-4">Tạo khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" name="name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" name="description" class="form-control" id="description">
        </div>
        <div class="form-group">
            <label for="vId">Video ID</label>
            <input type="text" name="vId" class="form-control" id="vId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" name="level" class="form-control" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Đăng khóa học</button>
    </form>
</div>
